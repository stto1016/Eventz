<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.bpsz.android.eventz.EventDetailsFragment">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/event_details_title"
        android:layout_alignParentStart="true"
        android:text="Hier steht der Titel"
        android:textSize="30sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/event_details_content"
        android:layout_below="@+id/event_details_title"
        android:layout_alignParentStart="true"
        android:layout_marginTop="106dp"
        android:text="Hier steht der Content des Events"
        android:gravity="top"
        android:textSize="20sp" />
</RelativeLayout>
